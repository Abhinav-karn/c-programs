#include <iostream>

using namespace std;

int print_array(int arr[],int size){
    for(int i=0;i<size;i++){
        cout<<arr[i]<<" ";
    }
}

int main()
{
    
    int arr[4]={1,2,3,4};
    cout<<"value at 3rd position "<<arr[3]<<endl;
    
    int first[5]={1,4,7,3};
    
    print_array(first,5);
    
    int second[8]={1,3,5,8};
    
    print_array(second,8);
    
    int fifth[10] = {1};
    int fifthsize = sizeof(fifth)/sizeof(int);
    cout<<"size of fiftharray"<<fifthsize;
    
    return 0;
}
